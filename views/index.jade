extends layout

block content
  h1= title
  p Welcome to #{title}
  img(src= "https://wiki.jenkins-ci.org/download/attachments/99451533/codefresh_logo_f_left-nc+%281%29.png?version=1&modificationDate=1469777553000")
  form(name="leftpad", action="/leftpad", method="post")
    span.label String2Pad
    input(type="text", name="string2pad", id="str2pad")
    span.label Pad2Length
    input(type="number", name="len2pad", id="len2pad")
    span.label "Char2Pad "
    input(type="text", name="char2pad", maxLength="1", id="char2pad")
    input(type="submit", name="pad", text="Pad this!")

  ul
    each result in results
      li=  result
